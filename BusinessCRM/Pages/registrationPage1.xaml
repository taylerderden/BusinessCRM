<Page x:Class="BusinessCRM.Pages.registrationPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BusinessCRM.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="registrationPage1">

    <Grid Background="#FFFFD7A1">
        <TextBlock Text="Login" Margin="10,10,738,456" Padding="10"/>
        <TextBlock Text="Pass" Margin="10,77,738,389" Padding="10"/>
        <TextBlock Text="Role" Margin="10,137,738,329" Padding="10"/>
        <TextBlock Text="Employee" Margin="10,201,717,265" Padding="10"/>

        <TextBox x:Name="tbLogin" Text="{Binding Login}" Margin="22,43,642,428" />
        <TextBox x:Name="tbPass" Margin="22,113,642,358" />
        <TextBox x:Name="tbRole" Text="{Binding Role}" Margin="22,172,642,299" />
        <TextBox x:Name="tbEmployee" Text="{Binding Employee}" Margin="22,250,642,221" />
        <Button x:Name="btnRegister" Content="register" Margin="243,142,452,333" Click="btnRegister_Click"/>
    </Grid>
</Page>
